{
    "name": "dansup/valet-gnusocial",
    "type": "library",
    "description": "GNU Social Laravel Valet Driver",
    "keywords": [
        "dansup",
        "valet-gnusocial"
    ],
    "homepage": "https://github.com/dansup/valet-gnusocial",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Supernault",
            "email": "danielsupernault@gmail.com",
            "homepage": "https://github.com/dansup",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "dansup\\valet-gnusocial\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dansup\\valet-gnusocial\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
